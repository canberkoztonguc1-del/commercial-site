<h1 class="page-title">Contact</h1>

<form action="/contact" method="post" class="card" style="max-width:640px;">
  {{#if success}}
    <div class="alert" style="margin-bottom:12px;">thanks, your message was sent.</div>
  {{/if}}
  {{#if error}}
    <div class="alert" style="margin-bottom:12px;">{{error}}</div>
  {{/if}}

  <div class="form-row">
    <label for="name">Name</label>
    <input id="name" name="name" type="text" required value="{{values.name}}">
  </div>

  <div class="form-row">
    <label for="email">Email</label>
    <input id="email" name="email" type="email" required value="{{values.email}}">
  </div>

  <div class="form-row">
    <label for="message">Message</label>
    <textarea id="message" name="message" rows="5" required>{{values.message}}</textarea>
  </div>

  {{!-- simple honeypot field to reduce bots (kept hidden via css) --}}
  <div class="form-row" style="display:none;">
    <label for="company">Company</label>
    <input id="company" name="company" type="text">
  </div>

  <div class="form-actions">
    <button type="submit" class="pill">Send</button>
    <a href="/" class="pill">Cancel</a>
  </div>
</form>
