<div class="container">
  <!-- SHOWCASE -->
  <section class="showcase">
    <div class="showcase-top">
      <div class="display">
        <img id="mainImg" src="/img/TV1/146214-2_large.jpg" alt="Main product image">
      </div>

      <aside class="stats" aria-label="Product stats">
        <h2 id="statTitle">TV</h2>
        <ul id="statList">
          <li>Screen: 55" 4K UHD</li>
          <li>Panel: OLED / 120Hz</li>
          <li>HDR: Dolby Vision / HDR10+</li>
          <li>HDMI: 4 × HDMI 2.1</li>
          <li>OS: Google TV</li>
        </ul>
      </aside>
    </div>

    <div class="shelf" aria-label="Small products">
      <button class="shelf-arrow left" aria-label="Scroll left">‹</button>

      <div class="shelf-track">
        <button class="thumb-card active"
          aria-selected="true"
          data-large="/img/TV1/146214-2_large.jpg"
          data-title="TV"
          data-specs="Screen: 55&quot; 4K UHD|Panel: OLED / 120Hz|HDR: Dolby Vision / HDR10+|HDMI: 4 × HDMI 2.1|OS: Google TV">
          <img src="/img/TV1/146214-2_large.jpg" alt="TV">
        </button>

        <button class="thumb-card"
          aria-selected="false"
          data-large="/img/phone 1/153483-1_large.jpg"
          data-title="Phone"
          data-specs="Display: 6.1&quot; OLED|Chip: A16|Camera: 48 MP|Battery: 24 hrs|5G: Yes">
          <img src="/img/phone 1/153483-1_large.jpg" alt="Phone">
        </button>

        <button class="thumb-card"
          aria-selected="false"
          data-large="/img/laptop 1/153592-2-1_large.jpg"
          data-title="Laptop"
          data-specs="Screen: 14&quot; 120Hz|CPU: i7|RAM: 16 GB|SSD: 512 GB|GPU: RTX 4060">
          <img src="/img/laptop 1/153592-2-1_large.jpg" alt="Laptop">
        </button>

        <button class="thumb-card"
          aria-selected="false"
          data-large="/img/smart-watch 1/151979-1_large.jpg"
          data-title="Smartwatch"
          data-specs="Size: 44 mm|Display: AMOLED|Water: 5 ATM|GPS: Yes|Battery: 2 days">
          <img src="/img/smart-watch 1/151979-1_large.jpg" alt="Smartwatch">
        </button>

        <button class="thumb-card"
          aria-selected="false"
          data-large="/img/camera/142010-1_large.jpg"
          data-title="Camera"
          data-specs="Sensor: 24 MP|Video: 4K60|Lens: 24–70mm|Stabilization: IBIS|Wi-Fi: Yes">
          <img src="/img/camera/142010-1_large.jpg" alt="Camera">
        </button>

        <button class="thumb-card"
          aria-selected="false"
          data-large="/img/printer/129731-2-1_large.jpg"
          data-title="Printer"
          data-specs="Type: InkTank|Speed: 10 ppm|Duplex: Auto|Wireless: Yes|Yield: 6000 pages">
          <img src="/img/printer/129731-2-1_large.jpg" alt="Printer">
        </button>

        <button class="thumb-card"
          aria-selected="false"
          data-large="/img/roomba/151193-1_large.jpg"
          data-title="Robot Vacuum"
          data-specs="Suction: 4000 Pa|Runtime: 120 min|Mapping: LiDAR|App: Yes|Mop: Optional">
          <img src="/img/roomba/151193-1_large.jpg" alt="Robot vacuum">
        </button>
      </div>

      <button class="shelf-arrow right" aria-label="Scroll right">›</button>
    </div>
  </section>

  <!-- Categories row 1 -->
  <section class="categories">
    <div class="category">
      <img src="/img-home-bottom/bottom-comp.png" alt="Computers">
      <div class="cat-info">
        <span class="cat-title">Computers</span>
        <a href="/products">Inspect the Products</a>
      </div>
    </div>

    <div class="category">
      <img src="/img-home-bottom/bottom-phones.png" alt="Phones">
      <div class="cat-info">
        <span class="cat-title">Phones</span>
        <a href="/products">Inspect the Products</a>
      </div>
    </div>
  </section>

  <!-- Categories row 2 -->
  <section class="categories2">
    <div class="category2">
      <img src="/img-home-bottom/cameras.png" alt="Cameras">
      <div class="cat-info">
        <span class="cat-title">Cameras</span>
        <a href="/products">Inspect the Products</a>
      </div>
    </div>

    <div class="category2">
      <img src="/img-home-bottom/printers.png" alt="Printers">
      <div class="cat-info">
        <span class="cat-title">Printers</span>
        <a href="/products">Inspect the Products</a>
      </div>
    </div>
  </section>
</div>
